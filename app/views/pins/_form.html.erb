<% if @pin.errors.any? %>
  <ul><% @pin.errors.full_messages.each do |error_msg| %>
    <li>
      <%= error_msg %>
    </li>
  <% end %></ul>
<% end %>

<%= form_for @pin do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :description %>
    <%= f.text_field :description %><br>

    <%= f.submit "Pin It!", class: "btn btn-primary"%>
<% end %>
